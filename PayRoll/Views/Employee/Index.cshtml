@model EmployeeListPagination<EmployeeIndexViewModel>
@{ ViewBag.Title = "Employee"; }

<div class="row">
  <div class="col-md-grid-margin">
      <div class="card">
        
              <div  class="card-body">
                 
                  <div class="row">
                      <div class="col-12 table-responsive-md">
                          <a class="btn btn-xs btn-outline-primary float-md-right" asp-controller="Employee" asp-action="Create">New Employee</a>
                          <table class="table table-striped text-primary">
                              <thead>
                                  <tr>
                                      <th>Employee No.</th>
                                      <th>Photo</th>
                                      <th>Name</th>
                                      <th>Designation</th>
                                      <th>City</th>
                                      <th class="text-warning">Actions</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  @foreach(var item in Model)
                                    {

                                  <tr>
                                      <td>
                                          <a asp-action="Detail" asp-route-id="@item.Id">
                                              @item.EmployeeNo
                                          </a>


                                      </td>
                                      <td>
                                          <img alt="image" src="@Url.Content(item.ImageUrl)" />
                                         
                                      </td>
                                      <td>
                                          @item.FullName

                                      </td>
                                    
                                      <td>
                                          @item.Designation

                                      </td>
                                      <td>
                                          @item.City

                                      </td>
                                     

                                      <td>
                                          <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                              <i class="fas fa-edit"></i>Edit

                                          </a>
                                          <a class="text-success" asp-action="Detail" asp-route-id="@item.Id"><i class="fas fa-bars"></i>Detail</a>
                                          <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i>Delete</a>

                                      </td>
                                  </tr>
                                    }
                              </tbody>
                          </table><br/>
                          @{ var disablePrevious = !Model.IsPreviousPageAvailable ? "disabled" : "";
                              var disableNext = !Model.IsNextPageAvailable ? "disabled" : "";

                           }
                          <a asp-action="Index" 
                             asp-route-pageNumber="@(Model.PageIndex-1)"
                             class="btn btn-primary @disablePrevious" 
                             >Previous

                          </a>
                          <a asp-action="Index"
                             asp-route-pageNumber="@(Model.PageIndex + 1)"
                             class="btn btn-primary @disableNext">
                              Next

                          </a>



                      </div>
                  </div>
              </div>
          </div>
      </div>

  </div>
